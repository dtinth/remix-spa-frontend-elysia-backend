{
  "name": "fresh-app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "start": "concurrently -n backend,frontend \"pnpm run -C backend start\" \"pnpm run -C frontend start\"",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^24.0.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "concurrently": "^9.0.0"
  }
}
